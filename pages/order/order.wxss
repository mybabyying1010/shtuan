/* pages/order/order.wxss */
/* 背景 */
.order_back{
  height: 100vh;
  width: 100%;
  background: #F8F8FF;
  padding-top: 2%;
}
/* 头部 */
.order_head{
  width: 92%;
  margin-left: 2%;
  padding:3% 2% 3% 2%;
  background: white;
  border-radius: 20rpx;
}
.order_head_top{
  margin: 3% 2% 3% 2%;
  padding-bottom: 2%;
  font-size: 35rpx;
  border-bottom: 1px solid #DDDDDD;
}
.order_head_top_text{
  font-size: 30rpx;
  color: #808080;
}
.order_head_top image{
  width: 30rpx;
  height: 30rpx;
}
/* 添加地址 */
.order_site{
  width: 92%;
  padding:3% 2% 0 2%;
  color: 	#1C86EE;
  border-radius: 20rpx;
  font-size: 30rpx;
}
.site_text :hover{
  color: #00FF00;
}
/* 商品 */
.order_shopping{
  width: 92%;
  margin-left: 2%;
  padding:3% 2% 3% 2%;
  background: white;
  border-radius: 20rpx;
  margin-top: 2%;
  display: flex;
}
.order_shopping_left{
  width: 20%;
}
.order_shopping_left image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}
.order_shopping_center{
  width: 70%;
  font-size: 35rpx;
}
.order_shopping_center_text{
  font-size: 30rpx;
  color: red;
  margin-top: 3%;
}
.order_shopping_right{
  width: 10%;
  font-size: 30rpx;
  margin-top: 7%;
}
/* 商品价格 */
.order_price{
  width: 92%;
  margin-left: 2%;
  padding:3% 2% 3% 2%;
  background: white;
  border-radius: 20rpx;
  margin-top: 2%;
}
.order_price_top{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  margin-top: 2%;
}
.order_price_top image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 1%;
}
.order_price_top_left{
  width: 80%;
}
.order_price_top_right{
  width: 20%;
}
/* 备注 */
.order_bz{
  width: 96%;
  margin-left: 2%;
  border-radius: 20rpx;
  overflow: hidden;
  margin-top: 2%;
}
